<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!-- primary color-->
        <item name="colorPrimary">@color/purple_500</item>
        <!-- variant of primary color used button, tab, status bar-->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- other elements color-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <!-- secondary color-->
        <item name="colorSecondary">@color/teal_200</item>
        <!-- variant of secondary color-->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!-- variant of secondary elements color -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>