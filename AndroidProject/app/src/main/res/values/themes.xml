<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>  primary color
        <item name="colorPrimaryVariant">@color/purple_700</item>   variant of primary color used button, tab, status bar
        <item name="colorOnPrimary">@color/white</item> other elements color
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>  secondary color
        <item name="colorSecondaryVariant">@color/teal_700</item>   variant of secondary color
        <item name="colorOnSecondary">@color/black</item>   variant of secondary color used button, tab, status bar
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>    status bar color
        <!-- Customize your theme here. -->
    </style>
</resources>